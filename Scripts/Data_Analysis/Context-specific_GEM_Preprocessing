# Open R
R

# Define the functions to calculate RPKM and TPM
rpkm <- function(counts, lengths) {
  rate <- counts / lengths 
  rate / sum(counts) * 1e6
}

tpm <- function(counts, lengths) {
  rate <- counts / lengths
  rate / sum(rate) * 1e6
}

# Update paths to the files for E.coli UTI89
genes <- read.table("/work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_Gene_Length_Clean.csv", header=TRUE, sep=",")
counts <- read.table("/work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/chromosome_merged_clean.csv", header=TRUE, sep=";")

# Calculate RPKMs and TPMs
rpkms <- apply(counts[, -1], 2, function(x) rpkm(x, genes$Length))
tpms <- apply(counts[, -1], 2, function(x) tpm(x, genes$Length))

# Adjust column names if needed
colnames(rpkms) <- colnames(counts)[-1] # Excludes the first column (gene ID)
colnames(tpms) <- colnames(counts)[-1]

# Output the results to CSV files
write.table(rpkms, "/work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/RPKMs.csv", row.names=TRUE, col.names=NA, sep=";", quote=FALSE)
write.table(tpms, "/work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/TPMS.csv", row.names=TRUE, col.names=NA, sep=";", quote=FALSE)

# Adjust for library paths if needed
library("sybil", lib="/work_beegfs/sukem113/Software/R_packages/") 
library("data.table", lib="/work_beegfs/sukem113/Software/R_packages/") 

# Adjust the working directory to where your models are located
setwd("/work_beegfs/sukem113/Genomes/GapSeq/Models/out/")

# Ensure you have the E.coli UTI89 model available
Model <- readRDS('E.coli_UTI89.RDS')

# Extract and save the GapSeq Start/Stop information for E.coli UTI89
str_Data <- paste(Model@react_attr$sstart, Model@react_attr$rxn, sep = ";")
str_Data1 <- paste(Model@react_attr$sstart, Model@react_attr$send, sep = "_")
write.table(str_Data, "/work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_GapSeq_Genes.csv", row.names=FALSE, col.names=TRUE, quote=FALSE)
write.table(str_Data1, "/work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_Chromosome_Matching.csv", row.names=FALSE, col.names=TRUE, quote=FALSE)

