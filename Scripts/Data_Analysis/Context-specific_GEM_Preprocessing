#Gapseq models need to be conditioned with gene expression data
#To reconstruct context-specific models

cd /work_beegfs/sukem113/rUTI/Transcriptome

# Extract Chromosome start/end & gene count info from E.coli UTI89 transcriptome files
awk '{print $4,$5,$10}' /work_beegfs/sukem113/rUTI/Transcriptome/E.coli_UTI89_Transcriptome.gtf > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/transcriptome0.gtf

# Process the extracted data
awk 'NR>2' /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/transcriptome0.gtf > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/transcriptome1.gtf
awk '!_[$0]++' /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/transcriptome1.gtf | sort -t, -nk1,1 > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/transcriptome2.gtf

# Since the strain is UTI89, we might not need to filter out its specific references. Adjust if needed for other strains.
grep -v "UTI89" /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/transcriptome2.gtf > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/transcriptome3.gtf
grep -v "AH4AK4" /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/transcriptome3.gtf > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/transcriptome4.gtf

# Identify duplicates and clean up
awk 'cnt[$3]++{$3=$3" variant "cnt[$3]-1} 1' /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/transcriptome4.gtf > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/transcriptome5.gtf
grep -v "variant" /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/transcriptome5.gtf > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/transcriptome_clean.gtf

# Calculating gene length
awk 'BEGIN {OFS="  "} {print $4,$5}' /work_beegfs/sukem113/rUTI/Transcriptome/E.coli_UTI89_Transcriptome.gtf > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_Gene_Length.gtf
awk 'BEGIN {OFS="  "} {print $2 - $1}' /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_Gene_Length.gtf > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_Gene_Length1.gtf
paste -d'  ' /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_Gene_Length.gtf /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_Gene_Length1.gtf > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_Gene_Length2.gtf

# Navigate to your Transcriptome directory for E.coli UTI89
cd /work_beegfs/sukem113/rUTI/Transcriptome

# Sort HTSeq count files to align them properly
# Make sure to replace the file names with your actual E.coli UTI89 count files
sort -V /work_beegfs/sukem113/rUTI/Transcriptome/E.coli_UTI89_1_htseq_counts.out > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_1_htseq_counts_sorted.out

# Extract gene and count information
awk '{print $1}' /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_1_htseq_counts_sorted.out > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_genes.gtf

# Repeat the process for counts in all files
for i in {1..5}
do
  awk '{print $2}' /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_"$i"_htseq_counts_sorted.out > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_counts_"$i".gtf
done

# Merge count files
paste -d';' /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_genes.gtf /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_counts_1.gtf /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_counts_2.gtf /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_counts_3.gtf /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_counts_4.gtf /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_counts_5.gtf > /work_beegfs/sukem113/rUTI/Metabolic_Model/E.coli_UTI89/E.coli_UTI89_Counts.csv

